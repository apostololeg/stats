.root
  margin-left 4px
  margin-top -10px

.content
  display flex
  align-items center
  gap 4px

  max-width 300px
  padding var(--indent-s)

  font-size 14px
  transition box-shadow 1s ease-out

  pre
    text-wrap wrap

  button
    background-color var(--decent-color)
    backdrop-filter: blur(10px)
    position absolute
    right 3px
    bottom 3px
    opacity 0
    transition opacity 0.1s ease-out

  &:hover button
    opacity 1

.isCopied
  animation copied 3s ease-out

@keyframes copied
  0%
    box-shadow inset 0 0 0 1px var(--active-color)
  100%
    box-shadow inset 0 0 0 1px var(--active-color-alpha-0)
