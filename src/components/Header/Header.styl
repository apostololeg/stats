@import '~theme'
json('../../constants/layoutBreakpoints.json')

.root
  display flex
  flex-direction column
  justify-content center
  align-items flex-start
  flex-shrink 0
  width 100%
  max-width 1000px
  min-height 80px
  padding var(--indent-s)
  padding-top env(safe-area-inset-top)
  padding-bottom 0
  // backdrop-filter blur(50px)
  // background-color var(--decent-color-alpha-800)
  // box-shadow 0 0 30px var(--decent-color), 0 0 0 2px var(--decent-color)


.logo
  top -4px

  svg
    color var(--accent-color) !important
    transform scale(1.5)

.titleGap
.title
  padding 0 20px
  font-size 150%
  font-weight bold

.titleGap
  min-height 2em

.title
  position relative
  display flex
  align-items center
  flex-grow 1
  color var(--accent-color) !important
  background-color transparent !important

  svg > path:first-child
    transition fill .2s ease-out

  &:hover svg > path:first-child
    fill var(--active-color)

.gap
  width 58px

.keyInput
  padding var(--indent-m)

  &
  & label
    width 100%

@media screen and (max-width: unit(MOBILE, 'px'))
  .root
    position fixed
    left 100%
    top 0

  .title::before
    content ''
    position fixed
    z-index 1
    top 0
    left 100%
    width 100%
    height 100%
    transition background-color .2s ease-out
    pointer-events none

  .isSidebarOpen .title::before
    background-color var(--decent-color-alpha-800)
    pointer-events auto